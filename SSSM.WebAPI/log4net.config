<?xml version="1.0" encoding="utf-8" ?>
<log4net>
	<!--Log for Heroku-->
	<appender name="A1" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<conversionPattern value="%-4timestamp [%thread] %-5level %logger %ndc - %message%newline" />
		</layout>
	</appender>
	<root>
		<level value="DEBUG" />
		<appender-ref ref="A1" />
	</root>
